# ==============================================
# FoodScope Environment Configuration
# ==============================================

# --- MOCK MODE CONFIGURATION ---
# Set to 'true' to use local JSON data (offline mode)
# Set to 'false' to use real external APIs (requires keys below)
MOCK_MODE=false

# --- EXTERNAL API KEYS ---
# Required if MOCK_MODE=false
# Get keys from: https://cosylab.iiitd.edu.in/
RECIPEDB_API_KEY=your_recipedb_api_key_here
FLAVORDB_API_KEY=your_flavordb_api_key_here
SUSTAINABLEFOODDB_API_KEY=your_sustainable_api_key_here
DIETRXDB_API_KEY=your_dietrx_api_key_here

# --- API BASE URLS (Optional - defaults provided in code) ---
# RECIPEDB_BASE_URL=https://cosylab.iiitd.edu.in/recipedb/
# FLAVORDB_BASE_URL=https://cosylab.iiitd.edu.in/flavordb/
# SUSTAINABLEFOODDB_BASE_URL=https://cosylab.iiitd.edu.in/sustainablefooddb/
# DIETRXDB_BASE_URL=https://cosylab.iiitd.edu.in/dietrxdb/

# --- CACHE CONFIGURATION ---
CACHE_ENABLED=true
CACHE_TTL=3600

# --- APP SETTINGS ---
LOG_LEVEL=INFO
MAX_REQUESTS_PER_MINUTE=60
