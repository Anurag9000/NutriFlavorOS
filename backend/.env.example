# Backend Configuration
# Copy this file to .env and fill in your values

# Server Settings
PORT=8000
HOST=0.0.0.0
RELOAD=true
LOG_LEVEL=info

# External API Keys (CosyLab Services)
# Request keys from: https://cosylab.iiitd.edu.in/
RECIPEDB_BASE_URL=https://cosylab.iiitd.edu.in/recipedb/
RECIPEDB_API_KEY=your_recipedb_api_key_here

FLAVORDB_BASE_URL=https://cosylab.iiitd.edu.in/flavordb/
FLAVORDB_API_KEY=your_flavordb_api_key_here

DIETRXDB_BASE_URL=https://cosylab.iiitd.edu.in/dietrxdb/
DIETRXDB_API_KEY=your_dietrxdb_api_key_here

SUSTAINABLEFOODDB_BASE_URL=https://cosylab.iiitd.edu.in/sustainablefooddb/
SUSTAINABLEFOODDB_API_KEY=your_sustainablefooddb_api_key_here

# Caching & Performance
CACHE_ENABLED=true
CACHE_TTL=3600
MAX_REQUESTS_PER_MINUTE=60
